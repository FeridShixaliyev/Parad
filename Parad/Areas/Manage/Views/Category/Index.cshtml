@model List<Category>
@{
    ViewData["Title"] = "Category";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <div class="create" style="margin-bottom:20px;margin-top:20px">
                <a class=" btn btn-success" asp-controller="Category" asp-action="create">Add Category</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Id </th>
                        <th> Description Image </th>
                        <th> Name </th>
                        <th> Amount </th>
                        <th> Edit </th>
                        <th> Delete </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td>
                                <img src="~/assets/images/@item.DescriptionImage" alt="image" style="width:60px;height:35px;border-radius:5px" />
                            </td>
                            <td> @item.CategoryName </td>
                            <td>
                                <a>Category Images</a>
                            </td>
                            <td> <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">edit</a> </td>
                            <td> <a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">delete</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
