@model Slider
@{
    ViewData["Title"] = "Edit Slider";
}

<div class="container mt-5">
    <h3>Edit Slider</h3>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Category Name</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Content" class="form-label">Description Photos</label>
            <input asp-for="@Model.Content" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Content"></span>
        </div>
        <div class="mt-2 text text-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>