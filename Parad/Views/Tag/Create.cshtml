@model Tag
@{
    ViewData["Title"] = "Creat tag";
}

<section>
    <div class="profile-img-converter" style="display:none">
        <img id="pro-img-con" src="~/assets/images/@ViewBag.AppUser.ProfileImage" />
    </div>
</section>
<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Add New Tag
                </h1>
                <div class="title-line darkmode-ignore">

                </div>
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.TagName" class="form-label">Tag Name</label>
                        <input asp-for="@Model.TagName" class="form-control"/>
                    </div>
                    <div class="mb-3 login-btn darkmode-ignore">
                        <button type="submit">
                            <p>
                                Add
                            </p>
                            <i class="fa-solid fa-right-long"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>