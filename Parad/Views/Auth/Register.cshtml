@using Parad.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="register">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Register
                </h1>
                <div class="title-line darkmode-ignore">

                </div>
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="FirstName" for="FirstName" class="form-label">First Name :</label>
                        <input asp-for="FirstName" type="text" class="form-control darkmode-ignore" id="FirstName" placeholder="First Name">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" for="LastName" class="form-label">Last Name :</label>
                        <input asp-for="LastName" type="text" class="form-control darkmode-ignore" id="LastName" placeholder="Last Name">
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Username" for="Username" class="form-label">Username :</label>
                        <input asp-for="Username" class="form-control darkmode-ignore" id="Username" placeholder="Username">
                        <span></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" for="Email" class="form-label">Email :</label>
                        <input asp-for="Email" class="form-control darkmode-ignore" id="Email" placeholder="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="Password" class="form-label">Password :</label>
                        <input asp-for="Password" class="form-control darkmode-ignore" id="Password" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" for="ConfirmPassword" class="form-label">Confirm Password :</label>
                        <input asp-for="ConfirmPassword" class="form-control darkmode-ignore" id="ConfirmPassword" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="mb-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="mb-3 form-check">
                        <a asp-controller="Auth" asp-action="Login">Do You Have a  Account?</a>
                    </div>
                    <div class="mb-3 register-btn darkmode-ignore">
                        <button type="submit">
                            <p>
                                Register
                            </p>
                            <i class="fa-solid fa-right-long"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
