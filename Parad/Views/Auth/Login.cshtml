@using Parad.ViewModels
@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Login
                </h1>
                <div class="title-line darkmode-ignore">

                </div>
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="UsernameOrEmail" for="UsernameOrEmail" class="form-label">Username Or Email</label>
                        <input asp-for="UsernameOrEmail" class="form-control darkmode-ignore" id="UsernameOrEmail" placeholder="Username Or Email">
                        <span asp-validation-for="UsernameOrEmail"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="exampleInputPassword1" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control darkmode-ignore" id="exampleInputPassword1" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
                        <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1">Remember Me</label>
                        <a asp-controller="Auth" asp-action="Register">Need Your Account?</a>
                    </div>
                    <div class="mb-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="mb-3 login-btn darkmode-ignore">
                        <button type="submit">
                            <p>
                                Login
                            </p>
                            <i class="fa-solid fa-right-long"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>